{
  "name": "groundwork",
  "displayName": "GroundWork",
  "description": "VSCode extension that integrates Baseline web feature compatibility data into the developer workflow",
  "version": "1.0.0",
  "publisher": "baseline-tooling",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other",
    "Programming Languages",
    "Snippets"
  ],
  "keywords": [
    "baseline",
    "web-features",
    "compatibility",
    "browser-support",
    "progressive-enhancement"
  ],
    "activationEvents": [
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onCommand:groundwork.checkCompatibility",
    "onCommand:groundwork.showDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "groundwork.checkCompatibility",
        "title": "Check Baseline Compatibility",
        "category": "GroundWork"
      },
      {
        "command": "groundwork.showDashboard",
        "title": "Show Compatibility Dashboard",
        "category": "GroundWork"
      },
      {
        "command": "groundwork.refreshData",
        "title": "Refresh Baseline Data",
        "category": "GroundWork"
      },
      {
        "command": "groundwork.configureProject",
        "title": "Configure Project Settings",
        "category": "GroundWork"
      }
    ],
    "configuration": {
      "title": "GroundWork",
      "properties": {
        "groundwork.browserSupport": {
          "type": "array",
          "default": ["chrome 90", "firefox 88", "safari 14"],
          "description": "Target browser support for compatibility checking"
        },
        "groundwork.warningLevel": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "default": "warning",
          "description": "Warning level for features not meeting baseline requirements"
        },
        "groundwork.autoCheck": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check compatibility as you type"
        },
        "groundwork.cacheDuration": {
          "type": "number",
          "default": 3600,
          "description": "Cache duration for baseline data in seconds"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "groundworkFeatures",
          "name": "GroundWork Features",
          "when": "groundwork.hasProject"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "groundwork",
          "title": "GroundWork",
          "icon": "resources/groundwork-icon.svg"
        }
      ],
      "panel": [
        {
          "id": "groundworkDashboard",
          "title": "Compatibility Dashboard",
          "icon": "resources/dashboard-icon.svg"
        }
      ]
    },
    "views": {
      "groundwork": [
        {
          "id": "groundworkFeatures",
          "name": "Features",
          "when": "groundwork.hasProject"
        },
        {
          "id": "groundworkWarnings",
          "name": "Warnings",
          "when": "groundwork.hasWarnings"
        }
      ],
      "groundworkDashboard": [
        {
          "id": "groundworkDashboard",
          "name": "Dashboard"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "groundwork.checkCompatibility",
          "when": "editorTextFocus",
          "group": "groundwork"
        }
      ],
      "commandPalette": [
        {
          "command": "groundwork.checkCompatibility"
        },
        {
          "command": "groundwork.showDashboard"
        },
        {
          "command": "groundwork.refreshData"
        },
        {
          "command": "groundwork.configureProject"
        }
      ]
    },
    "languages": [
      {
        "id": "html",
        "extensions": [".html", ".htm"]
      },
      {
        "id": "css",
        "extensions": [".css"]
      },
      {
        "id": "javascript",
        "extensions": [".js", ".mjs"]
      },
      {
        "id": "typescript",
        "extensions": [".ts", ".tsx"]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "node-cache": "^5.1.2",
    "browserslist": "^4.21.5",
    "caniuse-lite": "^1.0.30001418"
  }
}
